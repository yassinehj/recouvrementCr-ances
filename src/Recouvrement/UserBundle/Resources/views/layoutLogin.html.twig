<!DOCTYPE html>
<html lang="en" class="body-full-height">
<head>
    <!-- META SECTION -->
    <title>Recouvrement des cr√©ances</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>

    <link rel="icon" href="{{ asset('bundles/img/logo0.ico') }}" type="image/x-icon"/>
    <!-- END META SECTION -->

    <!-- CSS INCLUDE -->
    <link rel="stylesheet" type="text/css" id="theme" href="{{ asset('bundles/css/theme-default.css') }}"/>
    <!-- EOF CSS INCLUDE -->
</head>
<body>
<div>
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
        <a href="{{ path('fos_user_security_logout') }}">
            {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
        </a>
    {% else %}
        <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
    {% endif %}
</div>

{% if app.request.hasPreviousSession %}
    {% for type, messages in app.session.flashbag.all() %}
        {% for message in messages %}
            <div class="flash-{{ type }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
{% endif %}

<div class="login-container lightmode">

    <div class="login-box animated fadeInDown">
        {#<div class="login-logo"></div>#}
        <div style="margin-bottom: 10%">
        <center><img src="{{ asset('bundles/img/Image1.png') }}" width="60%"></center>
        </div>
        <div class="login-body">
            <div class="login-title"><strong>Log In</strong> to your account</div>
            {% block fos_user_content_login %}
            {% endblock fos_user_content_login %}
        </div>
        <div class="login-footer">
            <div class="pull-left">
                &copy; 2017 Yassine Hajji
            </div>
            <div class="pull-right">
                <strong><a href="#">About</a> |
                    <a href="#">Privacy</a> |
                    <a href="#">Contact Us</a></strong>
            </div>
        </div>
    </div>

</div>
</body>
</html>
